<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
    <title>Weather app | Home</title>
</head>

<body>
    {{>main_menu}}

    <!-- main header -->

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form action="" class="search_form">
                        <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <button type="submit" id="submitBtn">Search</button>
                    </form>
                </div>

                <div class="temp_info">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_day">28 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_span">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer code -->

    {{>footer}}
    
    {{>jsLinks}}
    <script src="js/main.js"></script>
</body>

</html>